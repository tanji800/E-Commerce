@model E_Commerce.Models.adminn
@{
    ViewBag.Title = "Login";
}

@*<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>*@

<Doctype>
    <html>
    <head>
        <link href="~/Content/loginstyle.css" rel="stylesheet" />



        <style>
            body {
                background-image: url('../../Content/images/adminBGImage.jpg');
            }
            form {
                float: right;
                background: rgba(19, 35, 47, 0.9);
                padding: 40px;
                max-width: 600px;
                margin: 40px auto;
                border-radius: 5px;
                box-shadow: 0 4px 10px 4px rgba(19, 35, 47, 0.3);
                margin-right: 20px; 
            }
            h2 {
                text-align: center;
                color: #ff6347;
                font-weight: 300;
                margin: 0 0 40px;
            }
        </style>



    </head>
    <body>
        <br />
        <h2>LOGIN</h2>

        @using (Html.BeginForm())
        {


            <form class="" action="" method="post">
                <div class="imgcontainer">
                </div>

                <div class="container">
                    <label for="uname"><b>Username</b></label>
                    @*<input type="text" placeholder="Enter Username" name="uname" required>*@
                    @Html.TextBoxFor(x => x.ad_name, new { @class = "form-control", @placeholder = "Admin Name" })
                    <span style="color:red">@Html.ValidationMessageFor(x => x.ad_name)</span>

                    <br />
                    <label for="psw"><b>Password</b></label>
                    @*<input type="password" placeholder="Enter Password" name="psw" required>*@

                    @Html.PasswordFor(x => x.ad_password, new { @class = "form-control", @placeholder = "Password" })
                    <span style="color:red">@Html.ValidationMessageFor(x => x.ad_password)</span>

                    <br />

                    <input type="submit" value="Login" class="btn btn-success " />


                </div>
                <div class="form-group">
                    <p style="color:red">@ViewBag.error</p>
                </div>
            </form>
        }
    </body>
</html>
<script src="~/Scripts/jquery.validate-vsdoc.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
@section Scripts
    {


    @Scripts.Render("~/bundles/jqueryval")
}
