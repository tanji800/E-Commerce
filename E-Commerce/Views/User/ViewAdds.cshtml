
@model E_Commerce.Models.ad_view_model


@{
    ViewBag.Title = "ViewAdds";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<style>


    body {
        style ="background-color:red;"
    }


    td {
        padding: 20px;
    }
</style>

<div class="row">
    <div class="col-lg-12 col-md-12">
        @*<img src="~/Content/images/bru" class="img img-responsive" style="width:100%" />*@
    </div>
</div>
<main style ="background-color:lightgrey;">
    <div class="col-lg-8 col-md-8">

        <div>
            <h1>@Model.pro_name <small>AD-ID:@Model.pro_id</small></h1>
        </div>

        <img src="@Url.Content(@Model.pro_image)" style="width:250PX; height:225PX" />

        <div>
            <h1>Description: </h1>
            <p>@Model.pro_desc</p>
        </div>

        <table>

            <tr> <td>Price: </td> <td>@Model.pro_price </td> </tr>
            <tr> <td>Category: </td> <td>@Model.cat_name </td> </tr>
            <tr> <td>Posted by: </td> <td>@Model.u_name <img src="@Url.Content(@Model.u_image)" style="width:40px; height:40px" /> </td> </tr>
            <tr> <td>Contact: </td> <td>@Model.u_mobile  </td> </tr>


            <tr>
                <td colspan="2">
                    @if (Convert.ToInt32(Session["u_id"]) == Convert.ToInt32(Model.pro_user_id))
                    {

                        @Html.ActionLink("Close this Ad", "Add_Delete", new { @class = "btn btn-danger", id = Model.pro_id })



                    }
                </td>
            </tr>

        </table>



    </div>
</main>




<div class="col-lg-2 col-md-2">
    @*<img src="~/Content/img/150_sleep1_600.gif" class="img img-responsive" style=" height:500px;" />*@
</div>
